<?xml version="1.0" encoding="UTF-8"?>
<Grid xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:Views="clr-namespace:CiudApp.ViewModels"
             x:Class="CiudApp.Views.Views.DataEntry"
             RowDefinitions="*,*" ColumnDefinitions="40,*,*"
             RowSpacing="10" >
    <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
           Text="{Binding Title}" FontSize="Small" TextColor="#8f92a1"  VerticalOptions="End"
           HorizontalOptions="Start"/>
    <Image Grid.Row="1" Grid.Column="0" 
           Source="{Binding ImageSource}" HorizontalOptions="Start" VerticalOptions="Start"
           HeightRequest="40" Margin="5,10"/>
    <Entry Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" x:Name="entry"
           Placeholder="{Binding Placeholder}"  
           IsPassword="{Binding IsPassword}"/>
</Grid>