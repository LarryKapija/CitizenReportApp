<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CiudApp.Views.ReportPage"
             Title="Reportes">

    <ScrollView>
        <StackLayout>
            <Button Command="{Binding NavigationCommand}" HorizontalOptions="EndAndExpand" VerticalOptions="EndAndExpand" CornerRadius="50"/>

            <ListView >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ImageCell
                            ImageSource="{Binding image}"
                            Text="{Binding text}"
                            Detail="{Binding detail}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView> 
        </StackLayout>

    </ScrollView>

</ContentPage>