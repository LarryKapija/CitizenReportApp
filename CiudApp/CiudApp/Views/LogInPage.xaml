<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CiudApp.Views.LogInPage">
    <ContentPage.Content>
        <Grid RowDefinitions="*,*,*,*,*,*" >
            <Label Text="Iniciar Sesión" FontSize="Large" Grid.Row="0"/>
            <Button Text="Ingresar con Google" Command="{Binding GoogleLogIn}" 
                    Grid.Row="1"/>
            <Entry Placeholder="Nombre" Text="{Binding Name}" Grid.Row="2"/>
            <Entry Placeholder="Contraseña" Text="{Binding Password}" IsPassword="True" Grid.Row="3" />
            <Button Text="Iniciar sesión" Command="{Binding LogInCommand}" Grid.Row="4"/>
            <Frame Grid.Row="5" HorizontalOptions="Center">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding SignInCommand}" />
                </Frame.GestureRecognizers>
                <StackLayout>
                    <Label Text="¿Olvidaste tu contraseña?" TextColor="Blue"/>
                    <Label Text="Registrarse" HorizontalOptions="Center"/>
                </StackLayout>
            </Frame>
        </Grid>
    </ContentPage.Content>
</ContentPage>